<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic News</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <script defer src="/script.js"></script>
</head>
<body>
  <div class="container my-4">
    <h1 class="text-center">News Categories</h1>

    <% for (const category in newsData) { %>
      <div class="mb-5">
        <h2><%= category.charAt(0).toUpperCase() + category.slice(1) %></h2>
        <button class="btn btn-primary get-news-btn" data-category="<%= category %>">Get News</button>
        <div id="<%= category %>-articles" class="row mt-3">
          <% newsData[category].forEach((article) => { %>
            <div class="col-md-4 mb-3">
              <div class="card">
                <img
                  src="<%= article.imageUrl %>"
                  class="card-img-top"
                  alt="Article Image"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= article.summary %></p>
                  <a href="<%= article.sourceUrl %>" class="btn btn-info" target="_blank">Read More</a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
