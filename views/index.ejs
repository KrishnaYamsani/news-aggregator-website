<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>News Aggregator</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      background-color: #f8f9fa; /* Light grey background */
    }

    .category {
      margin-bottom: 2rem;
    }

    .card img {
      height: 150px;
      object-fit: cover; /* Ensures image doesn't distort */
    }

    .category-title {
      background-color: #007bff; /* Bootstrap primary color */
      color: white;
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 1rem;
    }

    .container {
      max-width: 1200px;
    }
  </style>
</head>
<body>
  <div class="container my-4">
    <h1 class="text-center mb-5">News Headlines</h1>
    <% Object.keys(newsData).forEach((category) => { %>
      <div class="category">
        <h2 class="category-title text-center">
          <%= category.charAt(0).toUpperCase() + category.slice(1) %>
        </h2>
        <div class="row">
          <% newsData[category].forEach((article) => { %>
            <div class="col-md-4">
              <div class="card mb-4">
                <img
                  src="<%= article.imageUrl %>"
                  class="card-img-top"
                  alt="<%= article.title %>"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= article.summary %></p>
                  <p class="card-text">
                    <small class="text-muted">Published on: <%= new Date(article.publishedAt).toLocaleString() %></small>
                  </p>
                  <a
                    href="<%= article.sourceUrl %>"
                    class="btn btn-primary"
                    target="_blank"
                  >
                    Read More
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
